{
  "name": "kasahorow",
  "short_name": "kasahorow",
  "description": "Learn something true. Every day.",
  "version": "2014.10.26",
  "manifest_version": 2,

  "omnibox": { "keyword" : "kw" },
  "options_page": "options.html",
  "browser_action": {
      "default_title": "kasahorow",
      "default_icon": "icon16.png",
      "default_popup": "popup.html"
  },

  "permissions": [
    "contextMenus",
    "notifications",
    "*://*.kasahorow.org/*"
  ],

  "background": {
    "scripts": ["common.js", "pictionary.js", "omnisearch.js","jquery.js", "inspiration.js", "keyboard.js"]
  },
 "content_scripts": [
    {
      "matches": ["*://*.kasahorow.org/*"],
      "css": [],
      "js": [ "pictionaryContent.js"],
      "run_at":"document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "web_accessible_resources": [
    "icon48.png"
  ]
}